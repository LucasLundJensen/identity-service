<html>
	<head>
		<title>Login</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
			rel="stylesheet"
		/>
		<style>
			body {
				background-color: #f6f6f6e1;
				display: flex;
				align-items: center;
				justify-content: center;
				font-family: "Roboto", sans-serif;
			}

			.login-container {
				display: flex;
				flex-direction: column;
				background-color: white;
				border-radius: 5px;
				padding: 2rem 1rem;
				width: 25%;
				box-shadow: 3px 3px 15px 1px rgba(0, 0, 0, 0.2);
				gap: 1rem;
			}

			.input-container {
				margin: 0 auto;
				width: 70%;
			}

			.input-group {
				display: flex;
				flex-direction: column;
				margin-bottom: 0.5rem;
			}

			.input-group > label {
				margin-bottom: 0.3rem;
			}

			.input-wrapper {
				display: flex;
				flex-direction: row;
				align-items: center;
				padding: 0 0.5rem;
				background-color: #f6f6f6e1;
				border-radius: 5px;
			}

			.input-wrapper:focus-within {
				outline: black auto 1px;
			}

			.input-wrapper input {
				flex: 1;
				margin: 0.4rem 0;
				padding: 0.5rem;
				border: none;
				background-color: #f6f6f6e1;
			}

			.input-wrapper input:focus-visible {
				outline: none;
			}

			.input-wrapper label > svg {
				height: 1.3rem;
				width: 1.3rem;
				margin-right: 0.5rem;
			}

			#login-text {
				text-align: center;
				margin: 0;
			}

			#submit-button {
				border: none;
				background-color: #22c55e;
				margin-top: 10px;
				padding: 0.8rem;
				width: 100%;
				cursor: pointer;
				border-radius: 5px;
			}
		</style>
	</head>

	<body>
		<h1 id="login-text">Confirm Email</h1>
	</body>
</html>
