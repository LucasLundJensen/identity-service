<html>
	<head>
		<title>Register</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
			rel="stylesheet"
		/>
		<style>
			body {
				background-color: #f6f6f6e1;
				display: flex;
				align-items: center;
				justify-content: center;
				font-family: "Roboto", sans-serif;
			}

			.login-container {
				display: flex;
				flex-direction: column;
				background-color: white;
				border-radius: 5px;
				padding: 2rem 1rem;
				width: 25%;
				box-shadow: 3px 3px 15px 1px rgba(0, 0, 0, 0.2);
				gap: 1rem;
			}

			.input-container {
				margin: 0 auto;
				width: 70%;
			}

			.input-group {
				display: flex;
				flex-direction: column;
				margin-bottom: 0.5rem;
			}

			.input-group > label {
				margin-bottom: 0.3rem;
			}

			.input-wrapper {
				display: flex;
				flex-direction: row;
				align-items: center;
				padding: 0 0.5rem;
				background-color: #f6f6f6e1;
				border-radius: 5px;
			}

			.input-wrapper:focus-within {
				outline: black auto 1px;
			}

			.input-wrapper input {
				flex: 1;
				margin: 0.4rem 0;
				padding: 0.5rem;
				border: none;
				background-color: #f6f6f6e1;
			}

			.input-wrapper input:focus-visible {
				outline: none;
			}

			.input-wrapper label > svg {
				height: 1.3rem;
				width: 1.3rem;
				margin-right: 0.5rem;
			}

			#login-text {
				text-align: center;
				margin: 0;
			}

			#submit-button {
				border: none;
				background-color: #22c55e;
				margin-top: 10px;
				padding: 0.8rem;
				width: 100%;
				cursor: pointer;
				border-radius: 5px;
			}
		</style>
	</head>

	<body>
		<form
			autocomplete="off"
			action="/oidc/interaction/<%= uid %>/create"
			method="post"
			class="login-container"
		>
			<h1 id="login-text">Register</h1>
			<div class="input-container">
				<div class="input-group">
					<label for="email">Email</label>
					<div class="input-wrapper">
						<label for="email">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									d="M16.5 12a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 10-2.636 6.364M16.5 12V8.25"
								/>
							</svg>
						</label>

						<input
							required
							name="email"
							type="text"
							placeholder="Geoff@email.com"
							autofocus="on"
							id="email"
						/>
					</div>
				</div>
				<div class="input-group">
					<label for="password">Password</label>
					<div class="input-wrapper">
						<label for="password">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"
								/>
							</svg>
						</label>
						<input
							required
							name="password"
							type="password"
							placeholder="Password"
							id="password"
						/>
					</div>
				</div>
				<button id="submit-button" type="submit">Sign-in</button>
			</div>
		</form>
	</body>
</html>
